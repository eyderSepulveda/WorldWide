<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.ContinenteActivity">


    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="701dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textElige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textviewElige" />

        <Button
            android:id="@+id/btnAfrica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonAfrica" />

        <Button
            android:id="@+id/btnAmerica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonAmerica" />

        <Button
            android:id="@+id/btnAsia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonAsia" />

        <Button
            android:id="@+id/btnEuropa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonEuropa" />

        <Button
            android:id="@+id/btnOceania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonOceania" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>